{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@/*": ["./src/*"],
      "react-helmet": ["./src/shims/react-helmet"],
      "react-helmet-async": ["./src/shims/react-helmet-async"],
      "react-window": ["./src/vendor/react-window"],
      ":bookcars-types": ["../packages/bookcars-types"],
      ":bookcars-helper": ["../packages/bookcars-helper/index.ts"],
      ":disable-react-devtools": ["../packages/disable-react-devtools"]
    },
  },
  "include": ["src", ".env.d.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/*"
  ],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../packages/bookcars-types" },
    { "path": "../packages/bookcars-helper" },
    { "path": "../packages/disable-react-devtools" }
  ]
}
